{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@bcrypt/bcrypt": [
        "libs/bcrypt/src"
      ],
      "@bcrypt/bcrypt/*": [
        "libs/bcrypt/src/*"
      ],
      "@encryption/encryption": [
        "libs/encryption/src"
      ],
      "@encryption/encryption/*": [
        "libs/encryption/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}